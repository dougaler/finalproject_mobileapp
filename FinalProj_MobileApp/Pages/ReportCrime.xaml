<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProj_MobileApp.Pages.ReportCrime"
             Title="ReportCrime">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Entry x:Name="entId" Placeholder="Id" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entTitle" Placeholder="Title" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entDescription" Placeholder="Description" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entLocation" Placeholder="Location" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entDate" Placeholder="Date" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entSeverity" Placeholder="Severity" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entStatus" Placeholder="Status" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entLatitude" Placeholder="Latitude" Text="Binding Stuff Place Holder"/>
        <Entry x:Name="entLongitude" Placeholder="Longitude" Text="Binding Stuff Place Holder"/>
        <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"/>

        <!-- <Button x:Name="addButton" Text="Add Contact" Command="{Binding AddCommand}"/> 
        <Button Text="View List" Clicked="Button_Clicked"/> -->
    </VerticalStackLayout>
</ContentPage>